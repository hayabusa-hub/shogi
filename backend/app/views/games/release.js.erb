$(".flash_messages").html("<%= escape_javascript(render 'layouts/flash_messages') %>");
$(".displayField").html("<%= escape_javascript(render 'games/display_field', {game: @game, display: @display, order: @order, before: -1, after: -1, promote: -1}) %>");
$("img#<%= @before_pos %>").removeClass("board_primary");
<% if -1 != @game.latest_place %>
  $("img#<%= @game.latest_place %>").addClass("latest_place");
<% end %>
