
<h1>ログイン</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label "パスワード" %>
      <%= f.password_field :password, class: "form-control"%>
      
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
    
    <p><%= link_to "アカウント新規作成", signup_path%></p>
  </div>
</div>

<div class="guest">
  <label for="button">ゲストログイン</label>
  <select name="user-name" class="inlineBlock">
    <% for num in 1..10 do %>
      <option value="<%= num %>"><%= "User#{num}" %></option>
    <% end %>
  </select>
  <input id="button" type="button" value="入力">
</div>

<script type="text/javascript">
  $('#button').on('click', function() {
    var num = $('[name=user-name]').val();
    var mail = `user${num}@example.com`
    var pass = "aaaaaa"
    $('#session_email').val(mail);
    $('#session_password').val(pass);
  });
</script>

